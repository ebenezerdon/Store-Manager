{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "windows"]
  },
  "globals": {
    "localStorage": true,
    "fetch": true
}
}
